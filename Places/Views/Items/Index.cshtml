@using Places.Models;

<h1>The places you have been</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (PlacesInput item in Model)
  {
    <li>@item.PlaceName</li>
    <li>@item.LongT</li>
    <li>@item.Lat</li>
    <li>@item.Season</li>
  }
</ul>

<a href="/places/new">Add a new item.</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
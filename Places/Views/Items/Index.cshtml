<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'> 
<link rel="stylesheet" type="text/css" runat="server" media="screen" href="~/css/styles.css" />

@using Places.Models;

<h1>The places you have been</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (PlacesInput item in Model)
  {
    <li>@item.PlaceName, @item.Id</li>
  }
</ul>
<form action="/places/{id}">
  <label for="placeID">Search a place ID:</label>
  <input id="placeID" name="placeID" type="text">
  <button type="submit">Submit</button>
</form>

<a href="/places/new">Add a new item.</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>